.morecomment-box {
  margin: 0 40rpx;
  box-sizing: border-box;
}

.morecomments {
  display: flex;
  justify-content: flex-start;
   align-items: center; 
}

.morecomment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-right: 35rpx;
}

