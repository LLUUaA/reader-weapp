/* pages/bookDetail/bookDetail.wxss */

.content {
  padding: 20rpx;
  min-height: 100vh;
}

.book-content {
  background-color: #fff;
  padding: 0 20rpx;
}

.book-info {
  padding: 0 20rpx;
}

.book-info .info {
  margin-left: 20rpx;
  line-height: 1.8;
}

.book-info .info .name {
  padding-bottom: 20rpx;
}

.book-info .cover {
  width: 200rpx;
  height: 260rpx;
  overflow: hidden;
}

.book-info .cover .img {
  width: 100%;
  height: 100%;
}

.hand-btn {
  -webkit-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  color: #fff;
}

.hand-btn .btn.is-add{
  background-color: #dddddd;
  color: #999999;
  border-color: #999999; 
}

.hand-btn .btn {
  width: 48%;
  height: 65rpx;
  line-height: 65rpx;
  background: #4fbbba;
  border: 1rpx solid #2ba4a3;
  text-align: center;
  margin: 10rpx 0;
}

.hand-btn .g-btn-warming {
  width: 48%;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  margin: 10rpx 0;
  background-color: #eee;
}
